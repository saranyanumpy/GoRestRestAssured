{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "pagination": {
          "type": "object",
          "properties": {
            "total": { "type": "integer" },
            "pages": { "type": "integer" },
            "page": { "type": "integer" },
            "limit": { "type": "integer" },
            "links": {
              "type": "object",
              "properties": {
                "previous": { "type": "string", "nullable": true },
                "current": { "type": "string" },
                "next": { "type": "string" }
              },
              "required": ["current", "next"]
            }
          },
          "required": ["total", "pages", "page", "limit", "links"]
        }
      },
      "required": ["pagination"]
    },
    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "user_id", "title", "body"],
        "properties": {
          "id": { "type": "integer" },
          "user_id": { "type": "integer" },
          "title": { "type": "string" },
          "body": { "type": "string" }
        }
      }
    }
  },
  "required": ["meta", "data"]
}
